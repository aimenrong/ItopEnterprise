<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/show_ticket" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:padding="5dp" android:background="#FFF">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/LinearLayout02"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical">
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_width="fill_parent" android:paddingLeft="2sp"
				android:paddingRight="2sp" android:layout_height="wrap_content"
				android:orientation="horizontal" android:paddingTop="2sp"
				android:gravity="left">
				<ImageView android:id="@+id/image" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="6sp" />
				<ImageView android:id="@+id/image2" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="2sp"
					android:paddingLeft="20sp" />
			</LinearLayout>


					<TableLayout android:layout_width="fill_parent"
				android:padding="5sp" android:layout_height="wrap_content"
				android:stretchColumns="1"
				android:orientation="vertical" 
				android:background="#DDD" >
				<TableRow>
					<TextView android:id="@+id/refText" android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:textColor="#000"
						android:text="ref number" android:textSize="12dp"
						android:background="#DDD" android:padding="5sp" />
<TextView android:id="@+id/callerText"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#000" android:text="caller" android:textSize="12dp"
						android:background="#DDD" android:padding="4sp" android:gravity="right" />
<ImageView android:id="@+id/callCallerImage" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="2sp"
					android:layout_gravity="center" />
				</TableRow>
				<TableRow>
				<TextView android:id="@+id/statusText"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#000" android:padding="5sp" android:paddingTop="0sp"
						android:textSize="16dp" android:background="#DDD" />
					<TextView android:id="@+id/agentText"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#000" android:text="agent" android:textSize="12dp"
						android:background="#DDD" android:padding="4sp" android:gravity="right" />
					<ImageView android:id="@+id/callAgentImage" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="2sp" android:paddingTop="4sp"
					android:layout_gravity="center"  />
				</TableRow>

			</TableLayout>	
			<TextView android:id="@+id/titleText" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textColor="#000"
				android:paddingTop="5sp" android:text="Title" android:textSize="20dp"
				android:background="#EEE"
				android:textStyle="bold" />
			<TableLayout android:layout_width="fill_parent"
				android:padding="5sp" android:layout_height="wrap_content"
				android:orientation="horizontal" android:gravity="left">
				<TableRow>
					<TextView android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:textColor="#000"
						android:text="started: " />
					<TextView android:id="@+id/dateText" android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:textColor="#000" />
				</TableRow>
				<TableRow>
					<TextView android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:textColor="#000"
						android:text="updated: " />
					<TextView android:id="@+id/lastUpdateText"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#000" android:textSize="14dp" />
				</TableRow>
				<TableRow>
					<TextView android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:textColor="#000"
						android:text="tto escal: " />
					<TextView android:id="@+id/ttoEscalText"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#000" android:textSize="14dp" />
				</TableRow>
			</TableLayout>


			<TextView android:paddingTop="10dp" android:id="@+id/descText"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textColor="#000" android:text="description"
				android:textSize="14dp" android:background="#EEE" />
			<TextView android:paddingTop="10dp" android:id="@+id/logText"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textColor="#000" android:text="description"
				android:textSize="12dp" android:background="#FFF" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>